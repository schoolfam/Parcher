<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".Fragments.ParentFragments.ParentMyProfileFragment">
<androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Edit  Your Profile"
              android:fontFamily="@font/masque"
              android:gravity="center"
              android:textColor="@color/colorPrimary"
              android:textSize="25sp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
              tools:layout_editor_absoluteX="0dp" android:id="@+id/register_parent_textView"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/register_parent_textView">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content"
                          android:paddingRight="40dp"
                          android:paddingLeft="40dp"
                          android:layout_marginTop="8dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/schoolbooks"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="First Name"
                />
                <EditText
                        android:id="@+id/edit_parent_first_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FIRST NAME"
                        android:textSize="15dp"
                        android:fontFamily="@font/spiderman_homecoming"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="Last Name"
                />
                <EditText
                        android:id="@+id/edit_parent_last_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="LAST NAME"
                        android:textSize="15dp"
                        android:fontFamily="@font/spiderman_homecoming"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="User Name"
                />
                <EditText
                        android:id="@+id/edit_parent_user_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="USER NAME"
                        android:textSize="15dp"
                        android:fontFamily="@font/spiderman_homecoming"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="Email"
                />
                <EditText
                        android:id="@+id/edit_parent_email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EMAIL"
                        android:textSize="15dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/spiderman_homecoming"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="Password"
                />
                <EditText
                        android:id="@+id/edit_parent_password_edit_text"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:textSize="15dp"
                        android:fontFamily="@font/spiderman_homecoming"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:fontFamily="sans-serif-smallcaps"
                          android:text="Phone Number"
                />
                <EditText
                        android:id="@+id/edit_parent_phone_edit_text"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PHONE NUMBER "
                        android:textSize="15dp"
                        android:fontFamily="@font/spiderman_homecoming"

                />


                <RadioGroup
                        android:layout_marginTop="30dp"
                        android:id="@+id/edit_parent_gender_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/edit_parent_male_radio_button"
                            android:layout_width="wrap_content"
                            android:text="Male"
                            android:fontFamily="@font/spiderman_homecoming"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/edit_parent_female_radio_button"
                            android:layout_width="wrap_content"
                            android:checked="true"
                            android:layout_weight="1"
                            android:text="Female"
                            android:fontFamily="@font/spiderman_homecoming"
                            android:layout_height="wrap_content"/>
                </RadioGroup>

                <Button
                        android:id="@+id/parent_edit_button"
                        android:layout_width="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp"
                        android:text="EDIT"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#fff"
                        android:background="@drawable/round_button"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>